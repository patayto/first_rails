<h3 class="comments">Post a Comment</h3>

<%= form_for [@article, @comment] do |f| %>
  <p>
    <%= f.label :author_name, "Your Name", :class => 'new_comment_author' %><br>
    <%= f.text_field :author_name, :class => 'new_comment_author_text', :autocomplete => 'off' %>
  </p>
  <p>
    <%= f.label :body, "Comment", :class => 'new_comment_header' %><br>
    <%= f.text_area :body, :class => 'new_comment_text' %>
  </p>
  <p>
    <%= f.submit 'Post', :class => 'create_new_comment_button' %><br>
  </p>
<% end %>
