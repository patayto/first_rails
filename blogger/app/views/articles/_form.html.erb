<%= form_for(@article) do |f| %>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, :class => 'new_article_title' %><br>
    <%= f.text_field :title, :class => 'new_article_title_text', :autocomplete => 'off' %>
  </p>
  <p class='new_article_body'>
    <%= f.label :body, :class => 'new_article_title' %><br>
    <%= f.text_area :body, :class => 'new_article_body_text' %>
  </p>
  <p>
    <%= f.submit 'Create Article', :class => 'create_new_article_button'%>
  </p>
  <p>
    <%= link_to 'Cancel', articles_path, :id => 'cancel_button' %>
  </p>
<% end %>
